# Production Environment Configuration
# Copy this to .env.prod on your Azure VM and fill in the values

# Azure Communication Services (for email functionality)
AZURE_COMMUNICATION_CONNECTION_STRING=endpoint=https://your-endpoint.communication.azure.com/;accesskey=your-access-key

# Email settings
SENDER_ADDRESS=donotreply@your-domain.com
SENDER_NAME=Your App Name

# Security (CHANGE THESE!)
WEBUI_SECRET_KEY=generate-a-strong-secret-key-here

# Qdrant settings
QDRANT_COLLECTION_PREFIX=scout-ai
ENABLE_QDRANT_MULTITENANCY_MODE=true

# Performance settings
RAG_CHUNK_SIZE=800
RAG_CHUNK_OVERLAP=200
RAG_TOP_K=10